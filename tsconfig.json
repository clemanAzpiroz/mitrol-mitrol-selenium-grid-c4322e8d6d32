{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "lib": [
      "ESNext",
      "dom"
    ],
    "types": [ "node", "@playwright/test"],
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "paths": {
      "dotenv": ["."]
    }
  },
  "include": [
   "test",
   "."
  ]
}
